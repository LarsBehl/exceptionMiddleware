<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <PackageId>Aspnetcore.ExceptionMiddleware</PackageId>
    <Version>2.2.0</Version>
    <Authors>Lars B</Authors>
    <Company>Lars B</Company>
    <Title>ASP.NET Core Exception Middleware</Title>

    <Description>
      A package containing a Middleware (to be exact an IActionFilter) handling thrown Exceptions and creating the coresponding HTTP-Messages.
      Several predefined Exceptions are available with the possibility of extension. Additionaly the used ErrorResponse-Schema can be added to
      OpenAPI-Spec generation of Swashbuckle.
    </Description>
    <PackageTags>AspNetCore;WebApi;Exception;Middleware</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/LarsBehl/exceptionMiddleware</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" Version="6.5.0" />
  </ItemGroup>

</Project>
